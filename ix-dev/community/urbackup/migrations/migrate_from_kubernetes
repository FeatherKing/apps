#!/usr/bin/python3

import os
import sys
import yaml

from migration_helpers.resources import migrate_resources
from migration_helpers.storage import migrate_storage_item


def migrate(values):
    config = values.get("helm_secret", {}).get("config", {})
    if not config:
        raise ValueError("No config found in values")

    new_values = {
        "TZ": config["TZ"],
        "urbackup": {
            "additional_envs": config["urbackupConfig"].get("additionalEnvs", []),
        },
        "network": {
            "web_port": config["urbackupNetwork"]["webPort"],
            "host_network": config["urbackupNetwork"].get("hostNetwork", True),
        },
        "run_as": {
            "user": config["urbackupID"].get("user", 0),
            "group": config["urbackupID"].get("group", 0),
        },
        "storage": {
            "config": migrate_storage_item(config["urbackupStorage"]["backups"]),
            "storage": migrate_storage_item(config["urbackupStorage"]["database"]),
            "additional_storage": [
                migrate_storage_item(item, include_read_only=True)
                for item in config["urbackupStorage"]["additionalStorages"]
            ],
        },
        "resources": migrate_resources(config["resources"]),
    }

    return new_values


if __name__ == "__main__":
    if len(sys.argv) != 2:
        exit(1)

    if os.path.exists(sys.argv[1]):
        with open(sys.argv[1], "r") as f:
            print(yaml.dump(migrate(yaml.safe_load(f.read()))))
